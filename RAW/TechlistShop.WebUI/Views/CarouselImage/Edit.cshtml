@model TechlistShop.Domain.Entities.CarouselImage

@{
    ViewBag.Title = ViewBag.title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<hr />
<h2>@ViewBag.title</h2>
<hr />
@using (Html.BeginForm("Edit", "CarouselImage", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ImageId)

    <div class="form-group">
        @Html.LabelFor(model => model.Caption) @Html.ValidationMessageFor(model => model.Caption)<br />
        @Html.TextBoxFor(model => model.Caption, new {@class = "form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.number) @Html.ValidationMessageFor(model => model.number)<br />
        @Html.TextBoxFor(model => model.number, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageLinkUrl) @Html.ValidationMessageFor(model => model.ImageLinkUrl)<br />
        @Html.TextBoxFor(model => model.ImageLinkUrl, new {@class = "form-control"})
    </div>
    
    <div>
        @Html.LabelFor(model => model.Active) @Html.ValidationMessageFor(model => model.Active)<br />
        @Html.CheckBoxFor(model => model.Active, new {@style = "min-width: 20px; width:initial; height:20px;" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Description) @Html.ValidationMessageFor(model => model.Description)<br />
        @Html.TextAreaFor(model => model.Description, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <span>عکس محصول</span>
            @if (Model.ImageData == null)
            {
                <span style="font-size:0.6em; color:red;">عکسی برای این محصول وجود ندارد</span>
            }
            else
            {
                <div>
                    <img width="450" src="@Url.Action("GetImage","CarouselImage", new{Model.ImageId})" />
                </div>   
            }
            <hr />
            <div style="font-size:0.6em;">آپلود عکس: <br /><br /> <input type="file" name="image" /></div>
    </div>
    
    <p style="text-align:left; width:40%; min-width:500px;">
        <button type="submit" class="btn btn-primary"><i class="fa fa-database"></i> ذخیره در پایگاه داده</button>
    </p>
}

<div style="text-align:center; width:40%; min-width:500px;">
    @Html.ActionLink("بازگشت به لیست", "Index", "CarouselImage",null, new { @class = "btn btn-danger btn-block" })
</div>

