@model TechlistShop.WebUI.Models.LoginModel

@{
    ViewBag.Title = "ورود به حساب کاربری";
}

<section id="loginForm">
<h2 style="font-family:DastNevis; font-size:1.5em;">به حساب کاربری خود وارد شوید:</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RememberMe, new { id = "checkbox" }) @Html.EditorFor(m => m.RememberMe)
        
    </div>
    <p>
        <button type="submit" class="btn btn-defualt btn-sm">ورود به حساب</button>
    </p>
    <p>
        اگر تا بحال ثبت نام نکرده اید، از @Html.ActionLink("اینجا", "Register") ثبت نام کنید.
    </p>
}
</section>

<section class="social" id="socialLoginForm">
    <h2 style="font-family:DastNevis; font-size:1.5em;">با کمک شبکه های اجتماعی وارد شوید:</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

