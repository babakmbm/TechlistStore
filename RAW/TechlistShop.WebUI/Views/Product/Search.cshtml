@model TechlistShop.WebUI.Models.ProductListViewModel

@{
    ViewBag.Title = "Search";
}

<h3 style="font-family:DastNevis; background-color:#fff;box-shadow: 0 1px 3px rgba(0,0,0,.2); padding:25px 15px; border-radius:4px;" role="alert">
    نتایج جستجوی شما برای 
    <span style="color:#45A449; font-weight:bold;">@ViewBag.SearchQuery</span>:
</h3>
<div>
    @foreach (var p in Model.Products)
        {
            @Html.Partial("ProductSummary", p);
        }
</div>
<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Search", new {q = @ViewBag.SearchQuery, PageNumber = x, category = Model.CurrentCategory}))
</div>
