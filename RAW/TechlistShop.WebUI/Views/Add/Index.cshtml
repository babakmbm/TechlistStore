@model IEnumerable<TechlistShop.Domain.Entities.Add>
@{
    ViewBag.Title = "آگهی ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4><i class="fa fa-file-image-o fa-2x"></i> عکس های کروسل خانه :</h4>

<table class="table table-hover table-bordered table-striped">
    <tr>
        <th style="width:115px;">
            آگهی
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.Description)
        </th>
        <th style="text-align:center; width:70px">
            @Html.DisplayNameFor(model=> model.Active)
        </th>
        <th style="text-align:center; width:30px">
            @Html.DisplayNameFor(model=>model.Order)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.ImageData == null)
            {
                <img src="http://placehold.it/110x44" alt="@item.Name">
            }
            else
            {
                <img style="width:110px;" src="@Url.Action("GetImage","Add", new{item.AddId})" />   
            }
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", new { addId = item.AddId })
        </td>
        <td>
            @item.LinkUrl
        </td>
        <td>
            @item.Description
        </td>
        <td style="text-align:center;">
            @if (item.Active == true)
            {
                @:فعال
            }
            else
            {
                @:غیر فعال    
            }
        </td>
        <td style="text-align:center;">
            @item.Order
        </td>
        <td style="text-align:center; width:90px">
            @Html.ActionLink("ویرایش", "Edit", new { addId = item.AddId })/
            @Html.ActionLink("حذف", "Delete", new { addId = item.AddId })
        </td>
    </tr>
}

</table>

<p style="text-align:left;">
    @Html.ActionLink("+ آگهی جدید", "Create", null, new {@class = "btn btn-primary" })
</p>
