@model TechlistShop.Domain.Entities.Add
@{
    ViewBag.Title = "جزئیات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped table-hover" style="min-width:80%;">
    <tr>
        <td colspan="2">
            جزئیات برای: "@Model.Name"
        </td>
    </tr>
    <tr>
        <td>
            وضعیت:
        </td>
        <td>
            @if (Model.Active)
            {
                @:فعال
            }else{
             @:غیر فعال   
            }
        </td>
    </tr>
    <tr>
        <td>
            تاریخ ایجاد:
        </td>
        <td>
            @Model.DateAdded
        </td>
    </tr>

    <tr>
        <td>
            @Html.DisplayNameFor(model => model.LinkUrl):
        </td>
        <td>
            @Html.DisplayFor(model => model.LinkUrl)
        </td>
    </tr>
    
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Description):
        </td>
        <td>
            @Html.DisplayFor(model => model.Description)
        </td>
    </tr>

    <tr>
        <td>
            عکس:
        </td>
        <td>
            @if (Model.ImageData == null)
            {
                @:عکسی وجود ندارد
                <br />
                <img src="http://placehold.it/310x114" alt="@Model.Name">
            }
            else
            {
                <img width="410" height:"60" src="@Url.Action("GetImage","Add", new { Model.AddId })" />   
            }
        </td>
    </tr>
</table>
<p style="text-align:left;">
    @Html.ActionLink("ویرایش", "Edit", new { addId = Model.AddId }, new {@class="btn btn-primary", style="width:200px; margin:10px;"})
    @Html.ActionLink("بازگشت به لیست", "Index", "Add", null, new {@class = "btn btn-danger" , style="width:200px; margin:10px;" })
</p>
